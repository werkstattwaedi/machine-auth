# On-device hardware integration test for NTAG424 DNA.
# Requires a tag prepared with the prepare_tag utility.
particle_cc_test(
    name = "hardware_test",
    srcs = ["ntag424_hardware_test.cc"],
    platform = "//maco_firmware/targets/p2:p2",
    deps = [
        ":local_key_provider",
        ":ntag424_tag_async",
        "//maco_firmware/devices/pn532:pn532_nfc_reader",
        "@particle_bazel//:device_os_headers",
        "@particle_bazel//pw_stream_particle:uart_stream",
        "@particle_bazel//pw_digital_io_particle:digital_io",
        "@pigweed//pw_async2:testing",
        "@pigweed//pw_log",
        "@pigweed//pw_thread:sleep",
    ],
)

