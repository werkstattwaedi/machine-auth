load("@rules_cc//cc:cc_library.bzl", "cc_library")

package(default_visibility = ["//maco_firmware:__subpackages__"])

cc_library(
    name = "nfc_tag",
    hdrs = ["nfc_tag.h"],
    deps = [
        "@pigweed//pw_bytes",
    ],
)

cc_library(
    name = "iso14443_tag",
    hdrs = ["iso14443_tag.h"],
    deps = [
        ":nfc_tag",
        "//maco_firmware/devices/pn532:tag_info",
        "//maco_firmware/modules/nfc_reader",
        "@pigweed//pw_bytes",
        "@pigweed//pw_chrono:system_clock",
        "@pigweed//pw_result",
        "@pigweed//pw_status",
    ],
)

cc_library(
    name = "mock_tag",
    hdrs = ["mock_tag.h"],
    deps = [
        ":nfc_tag",
        "@pigweed//pw_bytes",
        "@pigweed//pw_result",
    ],
)

cc_library(
    name = "iso14443_tag_mock",
    hdrs = ["iso14443_tag_mock.h"],
    deps = [
        ":mock_tag",
        "@pigweed//pw_bytes",
        "@pigweed//pw_result",
        "@pigweed//pw_status",
    ],
)
