# Screenshot testing utilities for LVGL UI

load("@pigweed//pw_build:compatibility.bzl", "incompatible_with_mcu")
load("@rules_cc//cc:cc_library.bzl", "cc_library")

package(default_visibility = ["//maco_firmware:__subpackages__"])

# PNG image utilities for screenshot testing
cc_library(
    name = "png_image",
    srcs = ["png_image.cc"],
    hdrs = ["png_image.h"],
    target_compatible_with = incompatible_with_mcu(),
    deps = [
        "//third_party/lodepng",
        "@pigweed//pw_result",
        "@pigweed//pw_span",
        "@pigweed//pw_status",
    ],
)

# Display driver that captures frames to memory
cc_library(
    name = "screenshot_display_driver",
    srcs = ["screenshot_display_driver.cc"],
    hdrs = ["screenshot_display_driver.h"],
    target_compatible_with = incompatible_with_mcu(),
    deps = [
        "//maco_firmware/modules/display:display_driver",
        "//third_party/lvgl",
        "@pigweed//pw_assert:check",
        "@pigweed//pw_span",
    ],
)

# Test harness wrapping LVGL lifecycle for screenshot tests
cc_library(
    name = "screenshot_test_harness",
    srcs = ["screenshot_test_harness.cc"],
    hdrs = ["screenshot_test_harness.h"],
    target_compatible_with = incompatible_with_mcu(),
    deps = [
        ":png_image",
        ":screenshot_display_driver",
        "//maco_firmware/modules/ui:screen",
        "//third_party/lvgl",
        "@pigweed//pw_log",
        "@pigweed//pw_status",
    ],
)
