{
  "name": "functions",
  "scripts": {
    "proto:generate": "cd ../proto && ../functions/node_modules/.bin/buf generate --template ../functions/buf.gen.yaml",
    "lint": "#eslint --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prebuild": "npm run proto:generate",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "seed-test-sessions": "npm run build && firebase emulators:exec --only firestore 'node lib/scripts/seed-test-sessions.js'",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "test:unit": "npm run build && mocha 'lib/src/**/*.test.js'",
    "test:integration": "npm run build && firebase emulators:exec --only firestore 'mocha lib/test/integration/**/*.test.js'",
    "test": "npm run build && npm run test:unit && npm run test:integration",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "particle-api-js": "^9.1.2"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.47.2",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/chai": "^4.3.16",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.2",
    "chai": "^4.3.10",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "express": "^4.19.2",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.4.0",
    "sinon": "^18.0.1",
    "supertest": "^7.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.4.5"
  },
  "private": true
}
