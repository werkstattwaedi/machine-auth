{
  "name": "oww-maschinenfreigabe",
  "private": true,
  "description": "IoT machine authentication system - dev orchestration",
  "scripts": {
    "dev": "concurrently -n emu,web -c blue,green \"npm run dev:emulators\" \"npm run dev:web\"",
    "dev:fresh": "rm -rf firebase-data && npm run dev",
    "dev:emulators": "firebase emulators:start --import=./firebase-data --export-on-exit=./firebase-data",
    "dev:web": "cd web && npm run dev",
    "dev:gateway": "bazel run //maco_gateway:gateway -- --port 5000 --master-key 000102030405060708090a0b0c0d0e0f --firebase-url http://127.0.0.1:5001/oww-maschinenfreigabe/us-central1/api --gateway-api-key local-gateway-key --verbose",
    "seed": "npx tsx scripts/seed-emulator.ts"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "firebase-admin": "^13.6.1",
    "tsx": "^4.19.0"
  }
}
